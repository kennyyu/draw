{
  "name": "draw",
  "version": "0.0.1",
  "description": "",
  "dependencies": {
    "bootstrap": "^3.3.4",
    "bootstrap-slider": "^4.8.0",
    "browserify-css": "^0.5.0",
    "color-picker": "0.0.1",
    "emitter": "0.0.1",
    "events": "^1.0.2",
    "firebase": "^2.2.4",
    "flux": "^2.0.0",
    "jquery": "^2.1.3",
    "react": "0.13.2",
    "react-bootstrap": "^0.21.0",
    "react-style": "^0.5.5"
  },
  "browserify": {
    "transform": [
      [
        "browserify-css",
        {
          "autoInject": true,
          "minify": true,
          "rootDir": "."
        }
      ],
      [
        "reactify",
        {
          "harmony": true,
          "strip-types": true
        }
      ]
    ]
  },
  "devDependencies": {
    "babelify": "^6.0.2",
    "browserify": "^9.0.8",
    "flow": "^0.2.3",
    "jsx": "^0.9.89",
    "jsxhint": "^0.14.0",
    "reactify": "^1.1.0",
    "react-tools": "^0.13.2",
    "uglify-js": "^2.4.20"
  },
  "scripts": {
    "clean": "rm -rf build",
    "lint": "jsxhint --harmony lib/**/*",
    "flow": "flow check",
    "prebuild": "npm run clean && npm run flow && npm run lint",
    "build": "mkdir -p build; browserify lib/main.js --outfile build/bundle.js",
    "postbuild": "uglifyjs --compress --mangle -- build/bundle.js > build/bundle.min.js 2> build/uglifyjs.log",
    "publish": "scripts/publish-gh-pages.sh",
    "watch": "watchify lib/main.js --outfile build/bundle.js"
  },
  "author": "Kenny Yu"
}
